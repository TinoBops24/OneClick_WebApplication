@page "/Admin/Orders/{OrderId}"
@model OneClick_WebApp.Pages.Admin.OrderDetailsModel
@attribute [Authorize(Policy = "AdminOnly")]
@{
    ViewData["Title"] = "Order Details";
    ViewData["Subtitle"] = $"Order #{Model.OrderId}";
    Layout = "_AdminLayout";
}

<!-- Enhanced Admin Navigation Bar -->
<div class="row mb-3">
    <div class="col-12">
        <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    <a href="/Admin/Dashboard" class="btn btn-outline-primary btn-sm me-2">
                        <i class="bi bi-speedometer2 me-1"></i>Dashboard
                    </a>
                    <a href="/Admin/Orders" class="btn btn-outline-secondary btn-sm me-2">
                        <i class="bi bi-arrow-left me-1"></i>All Orders
                    </a>
                    <a href="/Admin/Settings" class="btn btn-outline-info btn-sm me-2">
                        <i class="bi bi-gear me-1"></i>System Settings
                    </a>
                    <a href="/Admin/Index" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-palette me-1"></i>Site Branding
                    </a>
                </div>
            </div>
        </nav>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @Model.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @Model.ErrorMessage
    </div>
}

@if (Model.Order != null)
{
    <div class="row">
        <!-- Order Information -->
        <div class="col-lg-8">
            <!-- Order Details Card -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-receipt me-2"></i>
                        Order Information
                    </h6>
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-@(GetStatusBadgeClass(Model.Order.OrderStatus)) fs-6">
                            @Model.Order.OrderStatus
                        </span>
                        @if (Model.Order.FulfillmentStatus != FulfillmentStatus.Pending)
                        {
                            <span class="badge bg-info">
                                @Model.Order.FulfillmentStatus
                            </span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless table-sm">
                                <tr>
                                    <td class="fw-bold">Order ID:</td>
                                    <td>@(Model.Order.TransactionId ?? Model.Order.Id)</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Date:</td>
                                    <td>@Model.GetLocalTime(Model.Order.Timestamp)</td>
                                </tr>
                                @if (Model.Order.DueDate != null)
                                {
                                    <tr>
                                        <td class="fw-bold">Due Date:</td>
                                        <td>@Model.GetLocalDate(Model.Order.DueDate)</td>
                                    </tr>
                                }
                                <tr>
                                    <td class="fw-bold">Movement Type:</td>
                                    <td>@Model.Order.MovementType</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Delivery Type:</td>
                                    <td>
                                        <span class="badge bg-secondary">@Model.Order.DeliveryType</span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless table-sm">
                                <tr>
                                    <td class="fw-bold">Customer:</td>
                                    <td>@(Model.Order.ClientName ?? "Guest")</td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Order.ClientPhoneNumber) || !string.IsNullOrEmpty(Model.Order.Phone))
                                {
                                    <tr>
                                        <td class="fw-bold">Phone:</td>
                                        <td>
                                            <a href="tel:@(Model.Order.ClientPhoneNumber ?? Model.Order.Phone)" class="text-decoration-none">
                                                @(Model.Order.ClientPhoneNumber ?? Model.Order.Phone)
                                            </a>
                                        </td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.DeliveryAddress) || !string.IsNullOrEmpty(Model.Order.Address))
                                {
                                    <tr>
                                        <td class="fw-bold">Address:</td>
                                        <td>@(Model.Order.DeliveryAddress ?? Model.Order.Address)</td>
                                    </tr>
                                }
                                <tr>
                                    <td class="fw-bold">Grand Total:</td>
                                    <td class="fw-bold text-success fs-5">R @Model.Order.GrandTotal.ToString("N2")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Order.Instructions))
                    {
                        <div class="mt-3">
                            <h6 class="fw-bold">Special Instructions:</h6>
                            <div class="alert alert-light" style="white-space: pre-line;">
                                @Html.Raw(Model.FormatInstructions(Model.Order.Instructions))
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Items -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-bag me-2"></i>
                        Order Items
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Order.StockMovements?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th>SKU</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Order.StockMovements)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                    {
                                                        <img src="@item.ImageUrl" alt="@item.ProductName"
                                                             class="me-3 rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <div class="fw-bold">@item.ProductName</div>
                                                        @if (!string.IsNullOrEmpty(item.Category))
                                                        {
                                                            <small class="text-muted">@(item.Category)</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@(item.SKU ?? "-")</td>
                                            <td>@item.Quantity</td>
                                            <td>R @item.UnitPrice.ToString("N2")</td>
                                            <td class="fw-bold">R @item.LineTotal.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="4" class="text-end">Grand Total:</th>
                                        <th class="text-success fs-5">R @Model.Order.GrandTotal.ToString("N2")</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-box fs-2 mb-2"></i>
                            <p>No items found for this order</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Customer Information -->
            @if (Model.Customer != null)
            {
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="bi bi-person me-2"></i>
                            Customer Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.Customer.ImageUrl))
                            {
                                <img src="@Model.Customer.ImageUrl" alt="@Model.Customer.Name"
                                     class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-secondary rounded-circle me-3 d-flex align-items-center justify-content-center"
                                     style="width: 60px; height: 60px;">
                                    <i class="bi bi-person text-white fs-4"></i>
                                </div>
                            }
                            <div>
                                <div class="fw-bold">@Model.Customer.Name</div>
                                <div class="text-muted">@Model.Customer.Email</div>
                                <span class="badge bg-@(Model.Customer.UserRole == OneClick_WebApp.Models.Enums.Role.Admin ? "danger" : "primary")">
                                    @Model.Customer.UserRole
                                </span>
                            </div>
                        </div>

                        <div class="d-grid">
                            <a href="/Admin/Users/@Model.Customer.FirebaseUid" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-person-lines-fill me-2"></i>
                                View Customer Profile
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Actions Sidebar -->
        <div class="col-lg-4">
            <!-- Status Management -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-gear me-2"></i>
                        Order Actions
                    </h6>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="UpdateStatus">
                        <div class="mb-3">
                            <label class="form-label">Current Status:</label>
                            <div class="d-flex align-items-center">
                                <span class="badge bg-@(GetStatusBadgeClass(Model.Order.OrderStatus)) me-2">
                                    @Model.Order.OrderStatus
                                </span>
                                <small class="text-muted">
                                    @GetStatusDescription(Model.Order.OrderStatus)
                                </small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Update Status:</label>
                            <div class="d-grid gap-2">
                                @foreach (var status in Enum.GetValues<OneClick_WebApp.Models.Enums.OnlineOrderStatus>())
                                {
                                    @if (status != Model.Order.OrderStatus)
                                    {
                                        <button type="submit" name="newStatus" value="@status"
                                                class="btn btn-outline-@(GetStatusBadgeClass(status)) btn-sm">
                                            <i class="bi bi-@(GetStatusIcon(status)) me-2"></i>
                                            Mark as @status
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </form>

                    <hr>

                    <div class="d-grid gap-2">
                        @if (!string.IsNullOrEmpty(Model.Order.ClientPhoneNumber) || !string.IsNullOrEmpty(Model.Order.Phone))
                        {
                            <a href="tel:@(Model.Order.ClientPhoneNumber ?? Model.Order.Phone)" class="btn btn-outline-primary">
                                <i class="bi bi-telephone me-2"></i>
                                Call Customer
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- POS Integration Status -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-gear-wide-connected me-2"></i>
                        POS Integration
                    </h6>
                    <a href="/Admin/Settings" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-gear me-1"></i>
                        Settings
                    </a>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>POS Integration:</span>
                            <span class="badge bg-@(Model.IsPosIntegrationEnabled ? "success" : "secondary")">
                                @(Model.IsPosIntegrationEnabled ? "Enabled" : "Disabled")
                            </span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <form method="post" asp-page-handler="ResyncToPos">
                            <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                                <i class="bi bi-arrow-repeat me-2"></i>
                                Resync to POS
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Admin/Dashboard" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-speedometer2 me-2"></i>
                            Dashboard
                        </a>
                        <a href="/Admin/Orders" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-list-ul me-2"></i>
                            All Orders
                        </a>
                        <a href="/Admin/Settings" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-gear me-2"></i>
                            System Settings
                        </a>
                        <a href="/Admin/Users" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-people me-2"></i>
                            Manage Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-exclamation-triangle fs-1 text-warning mb-3"></i>
        <h4>Order Not Found</h4>
        <p class="text-muted">The order you're looking for doesn't exist or may have been deleted.</p>
        <a href="/Admin/Orders" class="btn btn-primary">
            <i class="bi bi-arrow-left me-2"></i>
            Back to Orders
        </a>
    </div>
}

@functions {
    private string GetStatusBadgeClass(OneClick_WebApp.Models.Enums.OnlineOrderStatus status)
    {
        return status switch
        {
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Pending => "warning",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.New => "info",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Accepted => "primary",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Processing => "info",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.ReadyForCollection => "success",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Completed => "success",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Declined => "danger",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Cancelled => "secondary",
            _ => "secondary"
        };
    }

    private string GetStatusIcon(OneClick_WebApp.Models.Enums.OnlineOrderStatus status)
    {
        return status switch
        {
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Pending => "clock",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.New => "plus-circle",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Accepted => "check-circle",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Processing => "arrow-repeat",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.ReadyForCollection => "box-seam",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Completed => "check2-circle",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Declined => "x-circle",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Cancelled => "dash-circle",
            _ => "question-circle"
        };
    }

    private string GetStatusDescription(OneClick_WebApp.Models.Enums.OnlineOrderStatus status)
    {
        return status switch
        {
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Pending => "Awaiting processing",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.New => "Recently placed",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Accepted => "Order confirmed",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Processing => "Being prepared",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.ReadyForCollection => "Ready for pickup",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Completed => "Order fulfilled",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Declined => "Order rejected",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Cancelled => "Order cancelled",
            _ => "Status unknown"
        };
    }
}