@page
@model OneClick_WebApp.Pages.Admin.MessagesModel
@attribute [Authorize(Policy = "AdminOnly")]
@{
    ViewData["Title"] = "Message Management";
    ViewData["Subtitle"] = $"Managing {Model.TotalCount} contact messages ({Model.UnreadCount} unread)";
    Layout = "_AdminLayout";
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @Model.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @Model.ErrorMessage
    </div>
}

<!-- Filters and Actions Section -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">
            <i class="bi bi-funnel me-2"></i>
            Filter Messages
        </h6>
        @if (Model.UnreadCount > 0)
        {
            <form method="post" asp-page-handler="MarkAllRead" class="d-inline">
                <button type="submit" class="btn btn-outline-success btn-sm">
                    <i class="bi bi-check-all me-1"></i>
                    Mark All Read
                </button>
            </form>
        }
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label for="SearchTerm" class="form-label">Search</label>
                <input type="text" class="form-control" id="SearchTerm" name="SearchTerm"
                       value="@Model.SearchTerm" placeholder="Name, email, subject, or content...">
            </div>
            <div class="col-md-3">
                <label for="UnreadOnly" class="form-label">Status</label>
                <select class="form-select" id="UnreadOnly" name="UnreadOnly">
                    <option value="">All Messages</option>
                    <option value="true" selected="@(Model.UnreadOnly == true)">Unread Only</option>
                    <option value="false" selected="@(Model.UnreadOnly == false)">Read Only</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i>Filter
                </button>
                <a href="/Admin/Messages" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-1"></i>Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Messages List -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">
            <i class="bi bi-envelope me-2"></i>
            Messages (@Model.Messages.Count of @Model.TotalCount)
        </h6>
        <div class="text-muted small">
            Page @Model.CurrentPage of @Model.TotalPages
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Messages.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var message in Model.Messages)
                {
                    <div class="list-group-item @(!message.IsRead ? "bg-light border-start border-warning border-3" : "")">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="me-3">
                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center"
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-person text-white"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1 @(!message.IsRead ? "fw-bold" : "")">@message.Name</h6>
                                                <p class="mb-0 text-muted small">
                                                    <a href="mailto:@message.Email" class="text-decoration-none">@message.Email</a>
                                                </p>
                                            </div>
                                            <div class="text-end">
                                                @if (!message.IsRead)
                                                {
                                                    <span class="badge bg-warning text-dark mb-1">New</span>
                                                }
                                                <div class="text-muted small">
                                                    @message.Timestamp?.ToDateTime().ToString("dd/MM/yyyy HH:mm")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="ms-5 ps-2">
                                    <h6 class="mb-2 @(!message.IsRead ? "fw-bold" : "")">@message.Subject</h6>
                                    <p class="mb-2 text-muted">
                                        @{
                                            var preview = message.Message?.Length > 150
                                            ? message.Message.Substring(0, 150) + "..."
                                            : message.Message;
                                        }
                                        @preview
                                    </p>
                                    <div class="d-flex gap-2">
                                        <a href="mailto:@message.Email?subject=Re: @message.Subject" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-reply me-1"></i>Reply
                                        </a>
                                        @if (!message.IsRead)
                                        {
                                            <form method="post" asp-page-handler="MarkAsRead" class="d-inline">
                                                <input type="hidden" name="messageId" value="@message.Id" />
                                                <button type="submit" class="btn btn-outline-success btn-sm">
                                                    <i class="bi bi-check me-1"></i>Mark Read
                                                </button>
                                            </form>
                                        }
                                        <!-- Expandable full message -->
                                        <button class="btn btn-outline-secondary btn-sm" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#message-@message.Id"
                                                aria-expanded="false">
                                            <i class="bi bi-eye me-1"></i>View Full
                                        </button>
                                    </div>
                                    <!-- Collapsible full message content -->
                                    <div class="collapse mt-3" id="message-@message.Id">
                                        <div class="card card-body border-start border-info border-3">
                                            <h6 class="card-title">Full Message:</h6>
                                            <p class="card-text" style="white-space: pre-wrap;">@message.Message</p>
                                            <div class="mt-2 pt-2 border-top">
                                                <small class="text-muted">
                                                    <strong>From:</strong> @message.Name &lt;@message.Email&gt;<br>
                                                    <strong>Subject:</strong> @message.Subject<br>
                                                    <strong>Received:</strong> @message.Timestamp?.ToDateTime().ToString("dd/MM/yyyy HH:mm:ss")
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Messages pagination">
                        <ul class="pagination pagination-sm justify-content-center mb-0">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(Model.CurrentPage - 1)">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@GetPageUrl(i)">@i</a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(Model.CurrentPage + 1)">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-envelope-x fs-1 text-muted mb-3"></i>
                <h5 class="text-muted">No Messages Found</h5>
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.UnreadOnly.HasValue)
                {
                    <p class="text-muted">Try adjusting your filters to see more results.</p>
                    <a href="/Admin/Messages" class="btn btn-outline-primary">Clear Filters</a>
                }
                else
                {
                    <p class="text-muted">Messages from your contact form will appear here.</p>
                }
            </div>
        }
    </div>
</div>

@functions {
    private string GetPageUrl(int page)
    {
        var queryParams = new List<string> { $"page={page}" };

        if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
            queryParams.Add($"SearchTerm={Uri.EscapeDataString(Model.SearchTerm)}");

        if (Model.UnreadOnly.HasValue)
            queryParams.Add($"UnreadOnly={Model.UnreadOnly}");

        return $"/Admin/Messages?{string.Join("&", queryParams)}";
    }
}