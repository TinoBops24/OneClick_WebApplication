@page "/Admin/Users/{UserId}"
@model OneClick_WebApp.Pages.Admin.UserDetailsModel
@attribute [Authorize(Policy = "AdminOnly")]
@{
    ViewData["Title"] = "User Details";
    ViewData["Subtitle"] = $"Profile for {Model.User?.Name ?? "User"}";
    Layout = "_AdminLayout";
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @Model.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @Model.ErrorMessage
    </div>
}

@if (Model.User != null)
{
    <div class="row">
        <!-- User Profile Information -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.User.ImageUrl))
                    {
                        <img src="@Model.User.ImageUrl" alt="@Model.User.Name"
                             class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center"
                             style="width: 120px; height: 120px;">
                            <i class="bi bi-person text-white" style="font-size: 3rem;"></i>
                        </div>
                    }

                    <h5 class="mb-1">@(Model.User.Name ?? "No Name")</h5>
                    <p class="text-muted mb-3">@Model.User.Email</p>

                    <div class="mb-3">
                        <span class="badge bg-@(GetRoleBadgeClass(Model.User.UserRole)) fs-6">
                            <i class="bi bi-@(GetRoleIcon(Model.User.UserRole)) me-1"></i>
                            @Model.User.UserRole
                        </span>
                        @if (Model.User.Disabled)
                        {
                            <span class="badge bg-danger fs-6 ms-2">
                                <i class="bi bi-x-circle me-1"></i>Disabled
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6 ms-2">
                                <i class="bi bi-check-circle me-1"></i>Active
                            </span>
                        }
                    </div>
                </div>
            </div>

            <!-- User Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-gear me-2"></i>
                        User Actions
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Toggle Status -->
                    <form method="post" asp-page-handler="ToggleStatus" class="mb-3">
                        <button type="submit" name="disable" value="@(!Model.User.Disabled)"
                                class="btn btn-@(Model.User.Disabled ? "success" : "warning") w-100">
                            <i class="bi bi-@(Model.User.Disabled ? "check-circle" : "x-circle") me-2"></i>
                            @(Model.User.Disabled ? "Enable User" : "Disable User")
                        </button>
                    </form>

                    <!-- Change Role -->
                    <div class="mb-3">
                        <label class="form-label">Change Role:</label>
                        <div class="d-grid gap-2">
                            @foreach (var role in Enum.GetValues<OneClick_WebApp.Models.Enums.Role>())
                            {
                                @if (role != Model.User.UserRole)
                                {
                                    <form method="post" asp-page-handler="ChangeRole" class="d-inline">
                                        <button type="submit" name="newRole" value="@role"
                                                class="btn btn-outline-@(GetRoleBadgeClass(role)) btn-sm w-100">
                                            <i class="bi bi-@(GetRoleIcon(role)) me-2"></i>
                                            Make @role
                                        </button>
                                    </form>
                                }
                            }
                        </div>
                    </div>

                    <hr>

                    <div class="d-grid gap-2">
                        <a href="/Admin/Users" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>
                            Back to Users
                        </a>
                        <a href="mailto:@Model.User.Email" class="btn btn-outline-primary">
                            <i class="bi bi-envelope me-2"></i>
                            Send Email
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Details and Activity -->
        <div class="col-lg-8">
            <!-- User Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        User Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless table-sm">
                                <tr>
                                    <td class="fw-bold">Firebase UID:</td>
                                    <td><code>@Model.User.FirebaseUid</code></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Email:</td>
                                    <td>
                                        <a href="mailto:@Model.User.Email">@Model.User.Email</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Name:</td>
                                    <td>@(Model.User.Name ?? "Not provided")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">User Code:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.User.Code))
                                        {
                                            <code>@Model.User.Code</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless table-sm">
                                <tr>
                                    <td class="fw-bold">Role:</td>
                                    <td>
                                        <span class="badge bg-@(GetRoleBadgeClass(Model.User.UserRole))">
                                            @Model.User.UserRole
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Status:</td>
                                    <td>
                                        @if (Model.User.Disabled)
                                        {
                                            <span class="badge bg-danger">Disabled</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Total Orders:</td>
                                    <td class="fw-bold text-primary">@Model.UserOrders.Count</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Total Spent:</td>
                                    <td class="fw-bold text-success">R @Model.UserOrders.Sum(o => o.GrandTotal).ToString("N2")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (Model.User.BranchAccess?.Any() == true)
                    {
                        <div class="mt-3">
                            <h6 class="fw-bold">Branch Access:</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var branch in Model.User.BranchAccess)
                                {
                                    <span class="badge bg-@(branch.Value ? "success" : "secondary")">
                                        @branch.Key: @(branch.Value ? "Allowed" : "Denied")
                                    </span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- User Orders -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-cart me-2"></i>
                        Recent Orders (@Model.UserOrders.Count)
                    </h6>
                    @if (Model.UserOrders.Any())
                    {
                        <a href="/Admin/Orders?SearchTerm=@Model.User.Email" class="btn btn-outline-primary btn-sm">
                            View All Orders
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.UserOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.UserOrders.Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <a href="/Admin/Orders/@order.TransactionId" class="text-decoration-none">
                                                    @order.TransactionId
                                                </a>
                                            </td>
                                            <td>@order.Timestamp?.ToDateTime().ToString("dd/MM/yyyy")</td>
                                            <td class="fw-bold">R @order.GrandTotal.ToString("N2")</td>
                                            <td>
                                                <span class="badge bg-@(GetStatusBadgeClass(order.OrderStatus))">
                                                    @order.OrderStatus
                                                </span>
                                            </td>
                                            <td>
                                                <a href="/Admin/Orders/@order.TransactionId" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-cart-x fs-2 mb-2"></i>
                            <p>No orders placed yet</p>
                        </div>
                    }
                </div>
            </div>

            <!-- User Wishlist -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-heart me-2"></i>
                        Wishlist (@Model.UserWishlist.Count items)
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.UserWishlist.Any())
                    {
                        <div class="row">
                            @foreach (var item in Model.UserWishlist.Take(6))
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-0 shadow-sm">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.ProductName"
                                                 style="height: 120px; object-fit: cover;">
                                        }
                                        <div class="card-body p-2">
                                            <h6 class="card-title mb-1" style="font-size: 0.9rem;">
                                                @(item.ProductName?.Length > 25 ? item.ProductName.Substring(0, 25) + "..." : item.ProductName)
                                            </h6>
                                            <p class="card-text text-success fw-bold mb-0">R @item.Price.ToString("N2")</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.UserWishlist.Count > 6)
                        {
                            <div class="text-center">
                                <small class="text-muted">And @(Model.UserWishlist.Count - 6) more items...</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-heart fs-2 mb-2"></i>
                            <p>No items in wishlist</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-person-x fs-1 text-warning mb-3"></i>
        <h4>User Not Found</h4>
        <p class="text-muted">The user you're looking for doesn't exist or may have been deleted.</p>
        <a href="/Admin/Users" class="btn btn-primary">
            <i class="bi bi-arrow-left me-2"></i>
            Back to Users
        </a>
    </div>
}

@functions {
    private string GetRoleBadgeClass(OneClick_WebApp.Models.Enums.Role role)
    {
        return role switch
        {
            OneClick_WebApp.Models.Enums.Role.Admin => "danger",
            OneClick_WebApp.Models.Enums.Role.User => "primary",
            _ => "secondary"
        };
    }

    private string GetRoleIcon(OneClick_WebApp.Models.Enums.Role role)
    {
        return role switch
        {
            OneClick_WebApp.Models.Enums.Role.Admin => "shield-check",
            OneClick_WebApp.Models.Enums.Role.User => "person",
            _ => "question-circle"
        };
    }

    private string GetStatusBadgeClass(OneClick_WebApp.Models.Enums.OnlineOrderStatus status)
    {
        return status switch
        {
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Pending => "warning",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Processing => "info",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Completed => "success",
            OneClick_WebApp.Models.Enums.OnlineOrderStatus.Declined => "danger",
            _ => "secondary"
        };
    }
}