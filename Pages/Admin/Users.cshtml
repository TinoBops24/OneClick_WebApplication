@page
@model OneClick_WebApp.Pages.Admin.UsersModel
@attribute [Authorize(Policy = "AdminOnly")]
@{
    ViewData["Title"] = "User Management";
    ViewData["Subtitle"] = $"Managing {Model.TotalCount} registered users";
    Layout = "_AdminLayout";
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success d-flex align-items-center mb-4 alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger d-flex align-items-center mb-4 alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Filters Section -->
<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0">
            <i class="bi bi-funnel me-2"></i>
            Filter Users
        </h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="SearchTerm" class="form-label">Search</label>
                <input type="text" class="form-control" id="SearchTerm" name="SearchTerm"
                       value="@Model.SearchTerm" placeholder="Name, email, or code...">
            </div>
            <div class="col-md-3">
                <label for="RoleFilter" class="form-label">Role</label>
                <select class="form-select" id="RoleFilter" name="RoleFilter">
                    <option value="">All Roles</option>
                    @foreach (var role in Enum.GetValues<OneClick_WebApp.Models.Enums.Role>())
                    {
                        <option value="@role" selected="@(Model.RoleFilter == role)">@role</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label for="DisabledFilter" class="form-label">Status</label>
                <select class="form-select" id="DisabledFilter" name="DisabledFilter">
                    <option value="">All Users</option>
                    <option value="false" selected="@(Model.DisabledFilter == false)">Active</option>
                    <option value="true" selected="@(Model.DisabledFilter == true)">Disabled</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i>Filter
                </button>
                <a href="/Admin/Users" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-1"></i>Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">
            <i class="bi bi-people me-2"></i>
            Users (@Model.Users.Count of @Model.TotalCount)
        </h6>
        <div class="text-muted small">
            Page @Model.CurrentPage of @Model.TotalPages
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th width="150">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr class="@(user.Disabled ? "table-secondary" : "")" data-user-id="@user.DisplayId">
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(user.ImageUrl))
                                        {
                                            <img src="@user.ImageUrl" alt="@user.Name"
                                                 class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded-circle me-3 d-flex align-items-center justify-content-center"
                                                 style="width: 40px; height: 40px;">
                                                <i class="bi bi-person text-white"></i>
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">
                                                @if (!string.IsNullOrWhiteSpace(user.Name) && user.Name != "No Name")
                                                {
                                                    @user.Name
                                                }
                                                else if (!string.IsNullOrEmpty(user.Email))
                                                {
                                                    <span class="text-muted">@user.Email.Split('@')[0]</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown User</span>
                                                }
                                            </div>
                                            <small class="text-muted">
                                                ID: @(user.DisplayId ?? user.Id ?? user.FirebaseUid?.Substring(0, 8) + "...")
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.Email))
                                    {
                                        <a href="mailto:@user.Email" class="text-decoration-none">
                                            @user.Email
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Email</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(GetRoleBadgeClass(user.UserRole)) position-relative">
                                        @user.UserRole
                                        @if (user.IsErpUser)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-info"
                                                  style="font-size: 0.6em;" title="ERP User">
                                                ERP
                                            </span>
                                        }
                                    </span>
                                </td>
                                <td>
                                    @if (user.IsErpUser)
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-building me-1"></i>ERP
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-globe me-1"></i>Online
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.Disabled)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Disabled
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Active
                                        </span>
                                    }
                                </td>

                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/Admin/Users/Details?id=@user.DisplayId" class="btn btn-outline-primary"
                                           title="View User Details">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                                                data-bs-toggle="dropdown" aria-expanded="false" title="More Actions">
                                            <i class="bi bi-three-dots"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">

                                            <!-- Toggle status: ONLY for ONLINE customer users -->
                                            @if (!user.IsErpUser)
                                            {
                                                <li>
                                                    <form method="post" class="d-inline" asp-page-handler="ToggleUserStatus"
                                                          onsubmit="return confirm('@(user.Disabled ? "Enable this user account?" : "Disable this user account? They will no longer be able to log in.")')">
                                                        <input type="hidden" name="userId" value="@user.DisplayId" />
                                                        @* Send the OPPOSITE of current state: if currently disabled, we want to enable (disable=false) *@
                                                        <input type="hidden" name="shouldDisable" value="@(!user.Disabled)" />
                                                        <input type="hidden" name="isErpUser" value="false" />
                                                        <input type="hidden" name="Page" value="@Model.CurrentPage" />
                                                        <input type="hidden" name="SearchTerm" value="@Model.SearchTerm" />
                                                        <input type="hidden" name="RoleFilter" value="@Model.RoleFilter" />
                                                        <input type="hidden" name="DisabledFilter" value="@Model.DisabledFilter" />
                                                        <button type="submit" class="dropdown-item @(user.Disabled ? "text-success" : "text-warning")">
                                                            <i class="bi bi-@(user.Disabled ? "check-circle" : "x-circle") me-2"></i>
                                                            @(user.Disabled ? "Enable User" : "Disable User")
                                                        </button>
                                                    </form>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <span class="dropdown-item text-muted" title="ERP user status is managed in ERP">
                                                        <i class="bi bi-shield-lock me-2"></i>
                                                        ERP User (Status managed in ERP)
                                                    </span>
                                                </li>
                                            }

                                            <li><hr class="dropdown-divider"></li>

                                            <!-- Delete User (only non-ERP) -->
                                            @if (!user.IsErpUser)
                                            {
                                                <li>
                                                    <form method="post" class="d-inline" asp-page-handler="DeleteUser"
                                                          onsubmit="return confirmDelete('@(user.Name ?? user.Email)', '@user.Email')">
                                                        <input type="hidden" name="userId" value="@user.DisplayId" />
                                                        <input type="hidden" name="Page" value="@Model.CurrentPage" />
                                                        <input type="hidden" name="SearchTerm" value="@Model.SearchTerm" />
                                                        <input type="hidden" name="RoleFilter" value="@Model.RoleFilter" />
                                                        <input type="hidden" name="DisabledFilter" value="@Model.DisabledFilter" />
                                                        <button type="submit" class="dropdown-item text-danger">
                                                            <i class="bi bi-trash me-2"></i>
                                                            Delete User
                                                        </button>
                                                    </form>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <span class="dropdown-item text-muted" title="ERP users cannot be deleted here">
                                                        <i class="bi bi-shield-lock me-2"></i>
                                                        ERP User (Protected)
                                                    </span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Users pagination">
                        <ul class="pagination pagination-sm justify-content-center mb-0">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(Model.CurrentPage - 1)">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@GetPageUrl(i)">@i</a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(Model.CurrentPage + 1)">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people fs-1 text-muted mb-3 d-block"></i>
                <h5 class="text-muted">No Users Found</h5>
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.RoleFilter.HasValue || Model.DisabledFilter.HasValue)
                {
                    <p class="text-muted">Try adjusting your filters to see more results.</p>
                    <a href="/Admin/Users" class="btn btn-outline-primary">Clear Filters</a>
                }
                else
                {
                    <p class="text-muted">Users will appear here once people start registering.</p>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(userName, userEmail) {
            const message = `⚠️ WARNING: Permanent Deletion\n\n` +
                `You are about to permanently delete:\n` +
                `User: ${userName}\n` +
                `Email: ${userEmail}\n\n` +
                `This action will:\n` +
                `• Remove the user from the database\n` +
                `• Delete their wishlist data\n` +
                `• Keep their order history for records\n\n` +
                `This action CANNOT be undone!\n\n` +
                `Are you absolutely sure you want to proceed?`;
            return confirm(message);
        }
    </script>
}

@functions {
    private string GetRoleBadgeClass(OneClick_WebApp.Models.Enums.Role role)
    {
        return role switch
        {
            OneClick_WebApp.Models.Enums.Role.Admin => "danger",
            OneClick_WebApp.Models.Enums.Role.User => "primary",
            OneClick_WebApp.Models.Enums.Role.Customer => "success",
            OneClick_WebApp.Models.Enums.Role.Manager => "warning",
            OneClick_WebApp.Models.Enums.Role.Staff => "info",
            OneClick_WebApp.Models.Enums.Role.Owner => "dark",
            _ => "secondary"
        };
    }

    private string GetPageUrl(int page)
    {
        var queryParams = new List<string> { $"page={page}" };

        if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
            queryParams.Add($"SearchTerm={Uri.EscapeDataString(Model.SearchTerm)}");

        if (Model.RoleFilter.HasValue)
            queryParams.Add($"RoleFilter={Model.RoleFilter}");

        if (Model.DisabledFilter.HasValue)
            queryParams.Add($"DisabledFilter={Model.DisabledFilter}");

        return $"/Admin/Users?{string.Join("&", queryParams)}";
    }
}
