    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function refreshCartAndWishlistBadges() {
            try {
                const cartData = JSON.parse(sessionStorage.getItem("cart")) || [];
                const cartBadge = document.getElementById('cartBadge');
                if (cartBadge) {
                    const totalItems = cartData.reduce((sum, item) => sum + (item.Quantity || item.quantity || 0), 0);
                    if (totalItems > 0) {
                        cartBadge.textContent = totalItems;
                        cartBadge.style.display = 'flex';
                    } else {
                        cartBadge.style.display = 'none';
                    }
                }
            } catch (e) {
                console.error("Could not parse cart data.", e);
            }

            try {
                const wishlistData = JSON.parse(sessionStorage.getItem("wishlist")) || [];
                const wishlistBadge = document.getElementById('wishlistBadge');
                if (wishlistBadge) {
                    const totalItems = wishlistData.length;
                    if (totalItems > 0) {
                        wishlistBadge.textContent = totalItems;
                        wishlistBadge.style.display = 'flex';
                    } else {
                        wishlistBadge.style.display = 'none';
                    }
                }
            } catch (e) {
                console.error("Could not parse wishlist data.", e);
            }
        }

        function refreshHeaderBadges() {
            refreshCartAndWishlistBadges();
        }

        // Chat Widget Functionality
        document.addEventListener('DOMContentLoaded', function () {
            const chatIcon = document.getElementById("chatIcon");
            const chatWidget = document.getElementById("chatWidget");
            const chatClose = document.getElementById("chatClose");
            const messages = document.getElementById("messages");
            const chatInput = document.getElementById("chatInput");
            const sendBtn = document.getElementById("sendBtn");
            const typing = document.getElementById("typing");
            const notificationDot = document.getElementById("notificationDot");

            let isOpen = false;
            let messageCount = 0;

            if (chatIcon && chatWidget && chatClose && messages && chatInput && sendBtn && typing && notificationDot) {

                function toggleChat() {
                    isOpen = !isOpen;
                    if (isOpen) {
                        chatIcon.style.display = 'none';
                        chatWidget.classList.add('show');
                        setTimeout(() => {
                            if (chatInput) chatInput.focus();
                        }, 300);
                        notificationDot.style.display = 'none';
                        chatIcon.classList.remove('pulse');
                        messageCount = 0;
                    } else {
                        chatWidget.classList.remove('show');
                        setTimeout(() => {
                            chatIcon.style.display = 'flex';
                        }, 300);
                    }
                }

                chatIcon.addEventListener('click', toggleChat);
                chatClose.addEventListener('click', toggleChat);

                function addMessage(text, isUser) {
                    if (!messages || !typing) return;

                    const div = document.createElement("div");
                    div.className = `message ${isUser ? 'message-user' : 'message-bot'}`;
                    div.innerHTML = `<div class="message-bubble">${text}</div>`;
                    messages.insertBefore(div, typing);
                    messages.scrollTop = messages.scrollHeight;

                    if (!isOpen && !isUser) {
                        messageCount++;
                        if (notificationDot) {
                            notificationDot.textContent = messageCount;
                            notificationDot.style.display = 'flex';
                        }
                        if (chatIcon) {
                            chatIcon.classList.add('pulse');
                        }
                    }
                }

                async function sendMessage() {
                    if (!chatInput || !sendBtn || !typing) return;

                    const text = chatInput.value.trim();
                    if (!text || chatInput.disabled) return;

                    addMessage(text, true);
                    chatInput.value = "";
                    chatInput.disabled = true;
                    sendBtn.disabled = true;

                    typing.style.display = "block";
                    if (messages) messages.scrollTop = messages.scrollHeight;

                    try {
                        const res = await fetch("/api/Chat", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                                "Accept": "application/json",
                                "X-Requested-With": "XMLHttpRequest"
                            },
                            body: JSON.stringify({ Message: text })
                        });

                        if (!res.ok) {
                            const errorText = await res.text();
                            console.error('Error response:', errorText);
                            throw new Error(`HTTP ${res.status}: ${errorText}`);
                        }

                        const data = await res.json();
                        typing.style.display = "none";
                        addMessage(data.reply || "Sorry, I didn't get a proper response.", false);

                    } catch (error) {
                        typing.style.display = "none";
                        console.error("Chat error details:", error);

                        let errorMsg = "Sorry, I'm having trouble connecting right now.";
                        if (error.message.includes('404')) {
                            errorMsg = "Chat service not found. Please contact support.";
                        } else if (error.message.includes('500')) {
                            errorMsg = "Server error. Please try again in a moment.";
                        } else if (error.message.includes('Failed to fetch')) {
                            errorMsg = "Network error. Please check your connection.";
                        }

                        addMessage(errorMsg, false);
                    } finally {
                        setTimeout(() => {
                            if (chatInput && sendBtn) {
                                chatInput.disabled = false;
                                sendBtn.disabled = false;
                                if (isOpen) chatInput.focus();
                            }
                        }, 100);
                    }
                }

                sendBtn.addEventListener('click', sendMessage);

                chatInput.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter' && !chatInput.disabled) {
                        e.preventDefault();
                        sendMessage();
                    }
                });

                notificationDot.style.display = 'none';
            }

            // Initialize badges
        @if (User.Identity.IsAuthenticated)
        {
            <text>
                            const initialCartDataFromServer = @Html.Raw(Model.InitialCartJson);
                            const initialWishlistDataFromServer = @Html.Raw(Model.InitialWishlistJson);
                            sessionStorage.setItem("cart", JSON.stringify(initialCartDataFromServer));
                            sessionStorage.setItem("wishlist", JSON.stringify(initialWishlistDataFromServer));
            </text>
        }
        else
        {
            <text>
                            sessionStorage.setItem("cart", "[]");
                            sessionStorage.setItem("wishlist", "[]");
            </text>
        }

            refreshCartAndWishlistBadges();
            window.refreshCartAndWishlistBadges = refreshCartAndWishlistBadges;
            window.refreshHeaderBadges = refreshHeaderBadges;
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
