@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using OneClick_WebApp.Models.ViewModel
@using OneClick_WebApp.Helpers
@using System.Linq
@using System.Text.Json
@inject OneClick_WebApp.Services.FirebaseDbService DbService
@{
    // Load branch configuration for dynamic company name and logo
    var branchConfig = await DbService.GetBranchConfigurationAsync();
    var companyName = branchConfig?.CompanyName ?? "Commerce Craft Pharmacy";
    var logoUrl = branchConfig?.LogoUrl ?? "/images/default-logo.png";
    
    // Split company name into parts for styling
    var nameParts = companyName.Split(' ');
    var firstPart = nameParts.Length > 0 ? string.Join(" ", nameParts.Take(nameParts.Length - 1)) : companyName;
    var lastPart = nameParts.Length > 1 ? nameParts.Last() : "";
    
    // Set ViewData for use in styles
    ViewData["LogoUrl"] = logoUrl;
    // ViewData["PrimaryColour"] = branchConfig?.PrimaryColour ?? "#1e40af";
    // ViewData["SecondaryColour"] = branchConfig?.SecondaryColour ?? "#6c757d";

    var categorySnapshot = await DbService.GetCollection("category").GetSnapshotAsync();
    var categories = categorySnapshot.Documents
        .Select(doc => new { Id = doc.Id, Name = doc.GetValue<string>("Name") })
        .OrderBy(c => c.Name)
        .ToList();
}

