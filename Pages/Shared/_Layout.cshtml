<body class="@(ViewData["Title"]?.ToString() == "Home" ? "homepage" :
              ViewData["Title"]?.ToString() == "Log In" || ViewData["Title"]?.ToString() == "Register" || ViewData["Title"]?.ToString() == "Set Your Password" ? "auth-page" :
