        <!-- Top Header Bar -->
        <div class="header-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="trust-badges">
                            <span class="trust-badge">
                                <i class="fas fa-shield-alt"></i>
                                Secure Checkout
                            </span>
                            <span class="trust-badge">
                                <i class="fas fa-truck"></i>
                                Free Delivery Over R500
                            </span>
                            <span class="trust-badge">
                                <i class="fas fa-phone"></i>
                                24/7 Support
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <small>
                            <i class="fas fa-map-marker-alt"></i>
                            Licensed Pharmacy | Cape Town, SA
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a href="/" class="pharmacy-logo">
                    <img src="@logoUrl" alt="@companyName" style="height: 59px;" loading="eager" />
                    <div class="logo-text">
                        @if (!string.IsNullOrEmpty(firstPart))
                        {
                            <span style="font-size: 1.2rem; font-weight: 700;">@firstPart</span>
                        }
                        @if (!string.IsNullOrEmpty(lastPart))
                        {
                            <span style="font-size: 1rem; font-weight: 600; color: #6b7280;">@lastPart</span>
                        }
                        else if (string.IsNullOrEmpty(firstPart))
                        {
                            <span style="font-size: 1.2rem; font-weight: 700;">@companyName</span>
                        }
                    </div>
                </a>

                <!-- Primary Navigation Links -->
                <div class="d-none d-lg-flex align-items-center mx-3">
                    <nav class="navbar-nav flex-row gap-3">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold px-2" href="#" role="button" data-bs-toggle="dropdown" style="color: #374151;" data-no-loading>
                                <i class="fas fa-store me-1"></i>Shop
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="/Products/Index">
                                        <i class="fas fa-th-large me-2"></i>All Products
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                @foreach (var category in categories)
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Products/Index?categoryFilter=@category.Id">
                                            @category.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold px-2" href="#" role="button" data-bs-toggle="dropdown" style="color: #374151;" data-no-loading>
                                <i class="fas fa-sort-alpha-down me-1"></i>Products A-Z
                            </a>
