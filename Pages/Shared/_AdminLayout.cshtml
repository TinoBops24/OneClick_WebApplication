                            <i class="bi bi-speedometer2"></i>
                            Dashboard
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Index" ? "active" : "")"
                       href="/Admin/Index">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-palette"></i>
                            Site Configuration
                        </div>
                    </a>
                </li>

                <li class="nav-item mt-3">
                    <div class="px-3 py-2">
                        <small class="text-uppercase text-muted fw-bold">Management</small>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Admin/Orders" ? "active" : "")"
