@page
@model OneClick_WebApp.Pages.AboutModel
@{
    ViewData["Title"] = "About Us";
}

<!-- Use a standard Bootstrap container for responsiveness -->
<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="text-center">
                <h1 class="display-4">@ViewData["Title"]</h1>
            </div>
            <hr class="my-5" />

            <!-- Section 1 -->
            @if (!string.IsNullOrEmpty(Model.Section1Title))
            {
                <div class="mb-5">
                    <h2>@Model.Section1Title</h2>
                    <p class="lead">@Html.Raw(Model.Section1Content?.Replace("\n", "<br />"))</p>
                </div>
            }

            <!-- Section 2 -->
            @if (!string.IsNullOrEmpty(Model.Section2Title))
            {
                <div class="mb-5">
                    <h2>@Model.Section2Title</h2>
                    <p class="lead">@Html.Raw(Model.Section2Content?.Replace("\n", "<br />"))</p>
                </div>
            }

            <!-- Section 3 -->
            @if (!string.IsNullOrEmpty(Model.Section3Title))
            {
                <div class="mb-5">
                    <h2>@Model.Section3Title</h2>
                    <p class="lead">@Html.Raw(Model.Section3Content?.Replace("\n", "<br />"))</p>
                </div>
            }

            <!-- Fallback content if no sections are configured -->
            @if (string.IsNullOrEmpty(Model.Section1Title) && string.IsNullOrEmpty(Model.Section2Title) && string.IsNullOrEmpty(Model.Section3Title))
            {
                <div class="text-center py-5">
                    <h3 class="text-muted">About Us content is being configured.</h3>
                    <p class="text-muted">Please check back soon or contact us for more information.</p>
                </div>
            }
        </div>
    </div>
</div>